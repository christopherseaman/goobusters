# Performance Configuration
# Copy this file to .env and adjust based on your hardware

# Performance Mode
# Options: auto, conservative, performance
# - auto: Automatically detect based on hardware
# - conservative: Safe for all systems, uses minimal resources
# - performance: Maximum performance, may overwhelm lower-end systems
PERFORMANCE_MODE=auto

# Resource Limits (leave blank for auto-detection)
# MAX_WORKERS=16           # Maximum parallel workers
# MAX_MEMORY_GB=76         # Maximum memory usage in GB
# MAX_THREADS=20           # Maximum threads per process

# Conservative Mode Override
# Set to true to force conservative mode regardless of hardware
# CONSERVATIVE_MODE=false

# GPU Acceleration
ENABLE_MPS=true            # Use Metal Performance Shaders on Apple Silicon
ENABLE_CUDA=true           # Use CUDA on NVIDIA GPUs
# DISABLE_GPU=false        # Set to true to disable all GPU acceleration

# Processing Settings
# BATCH_SIZE=auto          # Batch size for processing (auto, or number)
# BUFFER_FRAMES=auto       # Number of frames to buffer
# CACHE_FRAMES=auto        # Number of frames to cache

# Debug Settings
# VERBOSE=false            # Show detailed performance information
# DEBUG=false              # Enable debug logging
# WRITE_OUTPUT_VIDEO=true  # Write output videos with overlays (can be slow)
# MAX_VIDEOS=10            # Maximum number of videos to process (0 = all)
